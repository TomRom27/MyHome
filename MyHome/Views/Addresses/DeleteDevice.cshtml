@model MyHome.Models.DeviceViewModel

@{
    ViewBag.Title = "DeleteDevice";
}

<h2>Usuwanie urządzenia</h2>

<h3>@Model.DeviceId</h3>
<div>
    <hr />
    @Html.Partial("_DeviceInfo", Model)

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-default" />

        </div>
    }
    <div>
        @Html.ActionLink("Powrót do listy urządzeń", "Details", new { id = Model.AddressId })
    </div>
</div>
